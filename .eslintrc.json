{
    "env": { 
        "browser": true,
        "es2021": true 
    },
    
    "extends": [ 
        "eslint:recommended",
        "plugin:react/recommended",
        "prettier"
    ],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11, 
        "sourceType": "module" 
    },
    // Здесь мы подключаем используемые плагины.
    "plugins": [
        "react", 
        "prettier"
    ],
    
    "rules": {
        "prettier/prettier": "error", 
        "react/prop-types": 0 // 
    }
}